sudo xbps-install -Su xbps
sudo xbps-install -Syyu  
sudo xbps-install xtools git wget linux-headers gcc base-devel void-repo-nonfree dkms
sudo xbps-install -Syyu b43-fwcutter

cd ~

wget https://github.com/howtoedittv/broadcom-wl-easy/releases/download/1.0/broadcom-wl-5.100.138.tar.bz2

export FIRMWARE_INSTALL_DIR="/lib/firmware"

tar xjf broadcom-wl-5.100.138.tar.bz2

sudo b43-fwcutter -w "$FIRMWARE_INSTALL_DIR" broadcom-wl-5.100.138/linux/wl_apsta.o

modprobe b43 wl brcmsmac 


sudo xbps-install broadcom-wl-dkms 

sudo xbps-remove broadcom-wl-dkms

sleep 3

sudo reboot


